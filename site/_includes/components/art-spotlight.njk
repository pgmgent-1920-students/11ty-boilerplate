<div class="g-fb-row">
    {% set artwork = collections.art | artSpotlightFilter %}
    <div class="g-fb-col-12">
        <article class="spotlight">
            <h1 class="spotlight__title">{{ artwork.data.title }}</h1>
            <p class="spotlight__description">{{ artwork.data.description }} &mdash; {{ artwork.data.location }}</p>
            <picture class="spotlight__picture">
                <img src="{{ artwork.data.thumbnail }}"> 
            </picture>
            <div class="spotlight__body">{{ artwork.data.explanation | truncate(256) | safe  }}</div>
            <div class="spotlight__actions">
                <a href="{{ artwork.url | url }}" class="spotlight__read-more" title="Details {{ artwork.data.title }}">Learn more</a>
            </div>
        </article>
    </div>
</div>